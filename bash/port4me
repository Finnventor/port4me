#! /usr/bin/env bash

source incl/is_port_free.bash
source incl/java_hashCode.bash
source incl/lcg.bash
source incl/port4me.bash

port4me() {
    local -i skip=${PORT4ME_SKIP:-0}
    local -i exclude=${PORT4ME_EXCLUDE}
    local -i count
    local -i max_tries=${PORT4ME_MAX_TRIES:-1000}
    local must_work=${PORT4ME_MUST_WORK:-true}
    
    lcg_set_params
    lcg_set_seed "$(port4me_seed)"

    count=0
    while (( count < max_tries )); do
        lcg_port > /dev/null

        count=$((count + 1))
        ## Skip?
        if (( count <= skip )); then
            continue
        fi
        
        port=${LCG_INTEGER:?}
        ${PORT4ME_DEBUG:-false} && >&2 printf "%d. port=%d\n" "$kk" "$port"
        
        if is_port_free "$port"; then
            printf "%d\n" "$port"
            return 0
        fi
        port=
    done

    if $must_work; then
        error "Failed to find a free TCP port"
    fi

    printf "%d\n" "-1"
    return 0
}


port4me


